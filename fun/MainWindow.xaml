        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fun"
        mc:Ignorable="d"
        Title="MainWindow" Height="1050" Width="1980">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
